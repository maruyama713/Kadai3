<div class="flash">
    <%= flash[:hoge] %>
</div>

<h1>User info</h1>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h3>name <%= @user.name %></h3>
  <h3>introduction <%= @user.introduction %></h3>
    <%= link_to edit_user_path(@user) do %>
      <i class="fa-sharp fa-solid fa-user-pen"></i>
    <% end %>

<%= render 'books/new', book: @book %>

<h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image(100,100) %></td>
          <td><%= link_to book.title, "/books/#{book.id}" %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>