<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <%= link_to edit_user_path(@user) do %>
        <p class="text-center"><i class="fa-sharp fa-solid fa-user-pen"></i></p>
      <% end %>

      <%= render 'books/new', book: @book %>
    </div>

    <div class="col-md-8">
      <h1>Users</h1>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
             </tr>
          </thead>
          <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(100,100) %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show",  "/users/#{user.id}" %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
  </div>
</div>