<h1>User info</h1>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h3>name <%= @user.name %></h3>
  <h3>introduction <%= @user.introduction %></h3>
   <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>

<h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
  
<h1>Users</h1>
  <table>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
      </tr>
    </thead>
     <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag @user.get_profile_image(100,100) %></td>
          <td><%= @user.name %></td>
          <td><%= link_to "Show", user_path(@user) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>