<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/32d1030ebd.js" crossorigin="anonymous"></script>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-md bg-dark pb-3 pt-3">
        <div class="container-fluid">
          <%= link_to "Bookers", root_path,class: "navbar-brand" %>
            <% if user_signed_in? %>
              <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                  <%= link_to user_path(current_user.id), class: "nav-link text-light" do %><i class="fas fa-home">Home</i><% end %>
                </li>
                <li class="nav-item ml-3">
                  <%= link_to users_path, class: "nav-link text-light" do %><i class="fas fa-users">Users</i><% end %>
                </li>
                <li class="nav-item ml-3">
                  <%= link_to books_path, class: "nav-link text-light" do %><i class="fas fa-book-open">Books</i><% end %>
                </li>
                <li class="nav-item ml-3">
                  <%= link_to destroy_user_session_path, method: :delete, class: "nav-link text-light" do %><i class="fas fa-sign-out-alt">Log out</i><% end %>
                </li>
              </ul>
            <% else %>
              <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                  <%= link_to root_path, class: "nav-link text-light" do %><i class="fas fa-home">Home</i><% end %>
                </li>
                <li class="nav-item ml-3">
                  <%= link_to about_path, class: "nav-link text-light" do %><i class="fas fa-link">About</i><% end %>
                </li>
                <li class="nav-item ml-3">
                  <%= link_to new_user_registration_path, class: "nav-link text-light" do %><i class="fas fa-user-plus">Sign up</i><% end %>
                </li>
                <li class="nav-item ml-3">
                  <%= link_to new_user_session_path, class: "nav-link text-light" do %><i class="fas fa-sign-in-alt">Log in</i><% end %>
                </li>
              </ul>
            <% end %>
        </div>
      </nav>
    </header>

    <main>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    </main>

    <%= yield %>

    <footer>
      <div class="pt-5">
        <p class="text-center">CopyRight Infratop.inc</p>
      </div>
    </footer>
  </body>
</html>
