<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h1>Editing Book</h1>
      <% if @book.errors.any? %>
        <div id="error_explanation">
          <h2><%= @book.errors.count %> error prohibited this obj from being saved:</h2>
          <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @book do |f| %>
      <div class="new-book">
        <div class="new-book-title">
          <p>Title</p>
          <p><%= f.text_field :title %></p>
        </div>
        <div class="new-book-body">
          <p>Opinion</p>
          <p><%= f.text_area :body %></p>
        </div>
      </div>
        <p class="submit"><%= f.submit 'Update Book' %>
      <div class="link">
        <p><%= link_to 'Show', "/books/#{@book.id}" %> | <%= link_to "Back", books_path %></p>
      </div>
      <% end %>
    </div>
  </div>
</div>