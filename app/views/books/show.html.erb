<div class="flash">
    <%= flash[:hoge] %>
</div>

<h1>User info</h1>
  <%= image_tag @book.user.get_profile_image(100,100) %>
  <h3>name <%= @book.user.name %></h3>
  <h3>introduction <%= @book.user.introduction %></h3>
   <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>

<h1>New book</h1>
  <%= form_with model: @newbook do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>

<h1>Book detail</h1>
  <table>
    <tbody>
      <tr>
        <td>
          <%= link_to user_path(current_user.id) do %>
            <%= image_tag @book.user.get_profile_image(100,100) %>
          <% end %><br>
          <%= link_to @book.user.name, "/users/#{@user.id}" %>
        </td>
        <td><%= link_to @book.title, "/books/#{@book.id}" %></td>
        <td><%= @book.body %></td>
        <td><% if @book.user == current_user %>
              <%= link_to 'Edit', "/books/#{@book.id}/edit" %>
            <% end %>
        </td>
        <td><% if @book.user == current_user %>
              <%= link_to 'Destroy', book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか?" %>
            <% end %>
        </td>
      </tr>
    </tbody>
  </table>
